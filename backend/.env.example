# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kudipay
DB_USER=postgres
DB_PASSWORD=your_database_password

# Blockchain Configuration
NETWORK_NAME=base-sepolia
RPC_URL=https://sepolia.base.org
CHAIN_ID=84532
DEPLOYER_PRIVATE_KEY=your_wallet_private_key
MNEMONIC=your_12_word_mnemonic_phrase
GAS_LIMIT=500000
GAS_PRICE=20000000000

# Smart Contract Addresses (Deploy contracts first)
WALLET_FACTORY_ADDRESS=0x...
PHONE_WALLET_MAPPING_ADDRESS=0x...

# USSD Configuration
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
USSD_SHORT_CODE=*123#

# Twilio Configuration (Alternative)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Integration - Flutterwave
FLUTTERWAVE_API_URL=https://api.flutterwave.com/v3
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-...
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-...
FLUTTERWAVE_ENCRYPTION_KEY=your_encryption_key
FLUTTERWAVE_WEBHOOK_SECRET=your_webhook_secret

# Payment Integration - Paystack (Optional)
PAYSTACK_PUBLIC_KEY=pk_test_...
PAYSTACK_SECRET_KEY=sk_test_...

# Security
JWT_SECRET=your_super_secret_jwt_key
ENCRYPTION_KEY=your_32_char_encryption_key
PHONE_SALT=kudipay-salt-2024

# External APIs
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# FX Engine Configuration
# Markup/Spread for profit (1-3% recommended)
FX_MARKUP_USDC_NGN=0.02          # 2% markup for USDC/NGN
FX_MARKUP_USDT_NGN=0.02          # 2% markup for USDT/NGN
FX_MARKUP_ETH_NGN=0.025          # 2.5% markup for ETH/NGN (higher for volatile assets)
FX_MARKUP_BTC_NGN=0.025          # 2.5% markup for BTC/NGN

# FX Provider API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_URL=https://api.binance.com
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key

# Fallback Rates (used when all providers fail)
FALLBACK_USD_NGN_RATE=1550       # Update this regularly based on market rate

# Base Network RPC for Chainlink Price Feeds
BASE_RPC_URL=https://mainnet.base.org

# FX Circuit Breaker Configuration
FX_FAILURE_THRESHOLD=3
FX_RESET_TIMEOUT=60000           # 1 minute in milliseconds

# FX Cache Settings
FX_CACHE_MAX_SIZE=100
FX_STABLECOIN_TTL=300000         # 5 minutes for stablecoins
FX_CRYPTO_TTL=120000             # 2 minutes for volatile crypto
FX_FIAT_TTL=600000               # 10 minutes for fiat pairs
# Demo Mode
DEMO_MODE=true

# Logging
LOG_LEVEL=info


# Logging
LOG_LEVEL=info
